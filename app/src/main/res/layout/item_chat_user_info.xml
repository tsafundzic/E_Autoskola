<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/smallPadding">

    <android.support.v7.widget.CardView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteIron"
            android:padding="@dimen/smallPadding">

            <TextView
                android:id="@+id/userInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/smallMargin"
                android:layout_marginRight="@dimen/smallMargin"
                android:background="@drawable/circle_accent"
                android:gravity="center"
                android:maxEms="1"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/whiteIron"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/userInitial"
                android:layout_toRightOf="@+id/userInitial"
                android:textSize="@dimen/cardViewNameSize" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_toEndOf="@+id/userInitial"
                android:layout_toRightOf="@+id/userInitial" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>